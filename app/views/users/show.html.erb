<% if @user %>
  <% provide :title, @user.name %>

  <div class="row">
    <aside class="col-md-4">
      <%= render "shared/user_info", user: @user %>
    </aside>

    <div class="col-md-8">
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>

        <ol class="microposts">
          <%= render @microposts %>
        </ol>

        <%== pagy_bootstrap_nav(@pagy) %>
      <% end %>
    </div>
  </div>
<% end %>
