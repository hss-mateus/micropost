<% if @user %>
  <% provide :title, @user.name %>

  <div class="row">
    <aside class="col-md-4">
      <%= render "shared/user_info", user: @user %>
    </aside>

    <div class="col-md-8">
      <% if @user.posts.any? %>
        <h3>posts (<%= @user.posts.count %>)</h3>

        <%= turbo_frame_tag :posts do %>
          <%= render @posts %>

          <% if @pagy.next %>
            <%= turbo_frame_tag :posts, loading: :lazy, src: pagy_next_url(@pagy) %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
