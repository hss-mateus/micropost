<% provide(:title, "Followers") %>

<div class="row">
  <aside class="col-md-4">
    <%= render "shared/user_info", user: @user %>
  </aside>

  <div class="col-md-8">
    <h3><%= "Followers" %></h3>

    <% if @followers.any? %>
      <ul class="list-unstyled">
        <%= render @followers %>
      </ul>

      <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
</div>
