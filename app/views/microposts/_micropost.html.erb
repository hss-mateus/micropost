<li class="d-flex flex-column p-2 border-bottom" id="<%= dom_id(micropost) %>">
  <div class="d-flex align-items-center gap-2">
    <%= link_to gravatar_for(micropost.user, size: 40, class: "rounded-circle"), micropost.user %>

    <div class="d-flex flex-column">
      <span>
        <%= link_to micropost.user.name, micropost.user, class: "text-decoration-none" %>
      </span>

      <small class="text-muted">
        <%= time_ago_in_words(micropost.created_at) %> ago

        <% if current_user?(micropost.user) %>
          <%= link_to "delete",
             micropost,
             data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
             class: "text-decoration-none" %>
        <% end %>
      </small>
    </div>
  </div>

  <div class="d-flex flex-column gap-2 mt-2">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </div>
</li>
