<div id="<%= dom_id(user, :info) %>">
  <div class="d-flex align-items-center gap-2 mb-2">
    <%= gravatar_for(user, size: 60, class: "rounded-circle") %>

    <div class="d-flex flex-column">
      <%= link_to user.name, user, class: "text-decoration-none fw-bold h2 mb-0" %>
      <%= render "shared/stats", user: user %>
    </div>
  </div>

  <%= render "users/follow_form", user: user if logged_in? %>
</div>
