<%= form_with model: post, id: dom_id(post, :form), class: "d-flex flex-column" do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.text_area :content, placeholder: "Compose a new post...", class: "form-control" %>
  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "form-control" %>

  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
